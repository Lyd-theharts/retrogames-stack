FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src

# --- SECCIÓN DE SEGURIDAD ---
# 1. Creamos la carpeta (Imprescindible porque al borrar el archivo, Git pudo borrar la carpeta)
RUN mkdir -p src/main/resources

# 2. Creamos el archivo limpio (Imprescindible para que Spring arranque)
RUN echo "server.port=9090" > src/main/resources/application.properties
# ----------------------------

# Compilación IGNORANDO tests (Mano de santo para 'exit code: 1')
RUN mvn clean package -Dmaven.test.skip=true -Dmaven.javadoc.skip=true

FROM eclipse-temurin:21-jre-jammy
WORKDIR /app
COPY --from=build /app/target/*.jar app.jar
EXPOSE 9090
ENTRYPOINT ["java", "-jar", "app.jar"]
