FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src

# 1. CREAMOS LA CARPETA (Evita el error 'exit code: 2')
RUN mkdir -p src/main/resources

# 2. Creamos el archivo limpio (Evita el error de caracteres raros)
RUN echo "server.port=9090" > src/main/resources/application.properties

# 3. Compilamos (Evita el error de tests)
RUN mvn clean package -DskipTests -Dmaven.javadoc.skip=true

FROM eclipse-temurin:21-jre-jammy
WORKDIR /app
COPY --from=build /app/target/*.jar app.jar
EXPOSE 9090
ENTRYPOINT ["java", "-jar", "app.jar"]
