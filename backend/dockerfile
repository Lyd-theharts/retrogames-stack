# USAMOS JAVA 17 (La versión más compatible)
FROM maven:3.8.5-openjdk-17 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
# EL TRUCO: -DskipTests evita que intente conectar a la BD al compilar
RUN mvn clean package -DskipTests

# ETAPA 2: Ejecución
FROM openjdk:17-jdk-slim
WORKDIR /app
COPY --from=build /app/target/*.jar app.jar
# AQUÍ CAMBIAMOS AL PUERTO 9090 (El tuyo real)
EXPOSE 9090
ENTRYPOINT ["java", "-jar", "app.jar"]
