# ETAPA 1: Construcción (Node.js)
FROM node:18-alpine as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build --prod

# ETAPA 2: Servidor Web (Nginx)
FROM nginx:alpine
# Copiamos la carpeta 'retrogames' que genera tu build
COPY --from=build /app/dist/retrogames /usr/share/nginx/html
# Copiamos la configuración
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80